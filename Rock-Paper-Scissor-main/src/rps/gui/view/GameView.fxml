<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.GameViewController">

    <children>

        <!-- BAGGRUND -->
        <!-- /Images/PokemonRPS.png -->
        <!-- @../../../../resources/Images/PokemonRPS.png -->
        <!-- /Images/Pokeball.png -->
        <!-- @../../../../resources/Images/Pokeball.png -->
        <ImageView fitHeight="600" fitWidth="800">
            <image>
                <Image url="/Images/PokemonRPS.png" />
            </image>
        </ImageView>

        <!-- POKEBALL SELECTION -->
        <HBox layoutX="64.0" layoutY="486.0" prefHeight="113.0" prefWidth="706.0" spacing="150.0">

            <children>
                <ImageView fx:id="pokeball1" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/Images/Pokeball.png" />
                    </image>
                </ImageView>

                <ImageView fx:id="pokeball2" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/Images/Pokeball.png" />
                    </image>
                </ImageView>

                <ImageView fx:id="pokeball3" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/Images/Pokeball.png" />
                    </image>
                </ImageView>
            </children>

            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>

        <!-- PLAYER POKEMON -->
        <ImageView fx:id="playerChoice" fitHeight="200.0" fitWidth="250.0" layoutX="89.0" layoutY="258.0" pickOnBounds="true" preserveRatio="true" />

        <!-- ENEMY POKEMON -->
        <ImageView fx:id="enemyChoice" fitHeight="200.0" fitWidth="250.0" layoutX="503.0" layoutY="136.0" pickOnBounds="true" preserveRatio="true" />

        <!-- PLAYER THROW BALL -->
        <ImageView fx:id="playerBall" fitHeight="60" fitWidth="60" layoutX="180" layoutY="420" visible="false">
            <image>
                <Image url="/Images/Pokeball.png" />
            </image>
        </ImageView>

        <!-- ENEMY THROW BALL -->
        <ImageView fx:id="enemyBall" fitHeight="60" fitWidth="60" layoutX="520" layoutY="220" visible="false">
            <image>
                <Image url="/Images/Pokeball.png" />
            </image>
        </ImageView>

        <!-- PLAYER INFO BOX -->
        <VBox layoutX="14.0" layoutY="92.0" prefHeight="70.0" prefWidth="223.0" styleClass="cBoarder" stylesheets="@RPS.css">

            <children>
                <HBox spacing="50.0">
                    <children>
                        <Label text="The bot" />
                        <Label text="Lvl. 5" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>

                <ImageView fx:id="enemyHP" fitHeight="40.0" fitWidth="215.0" preserveRatio="true">
                    <image>
                        <Image url="/Images/HPfull.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>

        <!-- ENEMY INFO BOX -->
        <VBox layoutX="562.0" layoutY="360.0" prefHeight="70.0" prefWidth="223.0" styleClass="cBoarder" stylesheets="@RPS.css">

            <children>
                <HBox spacing="50.0">
                    <children>
                        <Label text="Player" />
                        <Label text="Lvl. 5" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>

                <ImageView fx:id="playerHP" fitHeight="40.0" fitWidth="215.0" preserveRatio="true">
                    <image>
                        <Image url="/Images/HPfull.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>

        <!-- SCORE BOX -->
        <VBox layoutX="385.0" layoutY="14.0" prefHeight="39.0" prefWidth="400.0" styleClass="cBoarder" stylesheets="@RPS.css">

            <children>
                <HBox spacing="40.0">
                    <children>
                        <Label text="Score:" />
                        <Label fx:id="winText" text="W" />
                        <Label fx:id="tieText" text="T" />
                        <Label fx:id="lossText" text="L" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

    </children>
</AnchorPane>
